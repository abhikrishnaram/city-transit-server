            html += '</div>'            
            html += '<button type="button" class="btn btn-primary d-none my-2 mx-auto addOption">Add Option</button>'
            html += '</div>'
            html +='<hr>'          
            html += '</div>'    
        
        count++;
        
        $('#questionClassId').append(html);
    });

    // remove row
    $(document).on('click', '#removeRow', function () {
        count--;
        $(this).closest('#inputFormRow').remove();
    });
</script>