            html += '<div class="input-group-append">'
            html += '<button type="button" class="btn btn-danger" id="removeRow">Remove</button>'
            html += '</div>'
            html += '</div>'
            html += '<div class="form-group mb-3 optionsClassId">'
            html += '<label for="quest<%= i %>">Options</label>'
            html += '<div class="input-group flex-nowrap">'
            html += '<span class="input-group-text" id="op'+count+'.1"> '+count+'.1</span>'
            html += '<input type="text" class="form-control" name="op'+count+'">'
            html += '</div>'
            html += '<div class="input-group flex-nowrap">'
            html += '<span class="input-group-text" id="op'+count+'.2"> '+count+'.2</span>'
            html += '<input type="text" class="form-control" name="op'+count+'">'
            html += '</div>'
            html += '<div class="input-group flex-nowrap">'
